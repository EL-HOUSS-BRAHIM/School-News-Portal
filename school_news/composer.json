{
  "name": "school_news",
  "description": "A simple school news application.",
  "type": "project",
  "require": {
    "php": "^7.4 || ^8.0",
    "monolog/monolog": "^2.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Core\\": "core/",
      "Handlers\\": "handlers/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}